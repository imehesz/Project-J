%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    %meta(name="language" content="en")
    / blueprint CSS framework
    %link(rel="stylesheet" type="text/css" href="#{Yii::app()->theme->baseUrl}/css/screen.css" media="screen, projection")
    %link(rel="stylesheet" type="text/css" href="#{Yii::app()->theme->baseUrl}/css/style.css" media="screen, projection")
    %link(rel="stylesheet" type="text/css" href="#{Yii::app()->request->baseUrl}/css/print.css" media="print")
    /[if lt IE 8]
      %link(rel="stylesheet" type="text/css" href="#{Yii::app()->request->baseUrl}/css/ie.css" media="screen, projection")
    %link(rel="stylesheet" type="text/css" href="#{Yii::app()->request->baseUrl}/css/main.css")
    %link(rel="stylesheet" type="text/css" href="#{Yii::app()->request->baseUrl}/css/form.css")
    %title= $this->pageTitle
    :php
      Yii::app()->clientScript->registerCoreScript('jquery');
      Yii::app()->clientScript->registerScriptFile( Yii::app()->request->baseUrl . '/js/jquery.tweet.js' );
      Yii::app()->clientScript->registerScriptFile( Yii::app()->theme->baseUrl . '/js/fonts/cufon-yui.js' );
      Yii::app()->clientScript->registerScriptFile( Yii::app()->theme->baseUrl . '/js/fonts/Windsong_400.font.js' );
  %body
    :php
      Yii::app()->clientScript->registerScript('datefontscript', 'Cufon.replace(".top-date")',CClientScript::POS_END );
    .container
      .header-top
      / header-top
      .header-bottom
        = CHtml::link( CHtml::image( Yii::app()->theme->baseUrl . '/images/yii-jobz.png' ), $this->createUrl( 'job/index' ) );
        .float-right.span-4.top-date
          = date( 'F, j', time() );
          = date( 'l', time() );
      / header-bottom
      .inner-content
        = $content
      / inner-content
      .clear
      .footer
        = CHtml::link( 'mehesz<span style="color:red;">.</span>net', 'http://mehesz.net' );
      / footer
    / container
